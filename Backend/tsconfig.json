{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "jsx": "react-jsx",
    "isolatedModules": true
  }
}
